#include <stdio.h>
#include <assert.h>

//#define CLEAR2CONTINUE
#include "../include/traces.h" 

// C'est dans le fichier elt.h qu'on doit choisir l'implémentation des T_elt
#include "elt.h"
#include "avl.h"

void main() {

	CLRSCR();
	WHOAMI(); 
  
	T_avl root = NULL; 
	T_avlNode * pAux = NULL;
	ELT_STRING mot;
	ELT_STRING adresse_fichier, nom_fichier;
	int n=0;
	
	printf("choisir un nombre de mots à mettre dans l'arbre \n");
	scanf("%d", &n);
	
	printf("Quelle est l'adresse du fichier ?\n");
	scanf("%s", &adresse_fichier);
	
	printf("Et son petit nom ?\n");
	scanf("%s", &nom_fichier);


        int i;
	
  	FILE* fichier=NULL;
   	fichier=fopen("nom_fichier","r");
	for(i=0,i<n,i++){
    		system( mot << fichier | head -i | tail -1);
    		insertAVL(&root,mot);				
    		createDotAvl(root,"root %d" i);
  	}

	return 0;
}

